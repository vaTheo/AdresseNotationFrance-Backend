{
    "compilerOptions": {
        "module": "CommonJS", 
        "removeComments": true,
        "declaration": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "target": "ES6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "./dist",
        "baseUrl": ".",
        "incremental": true,
        "paths": {
            // "@app/*": ["src/*"],
            "@server/*": ["src/server/*"],
            "@service/*": ["src/server/service*"],
            "@openDataSources/*": ["src/openDataSources/*"],
            "@root/*": ["src/root/*"],
        },
        "emitDecoratorMetadata": true,
        "experimentalDecorators":true,
    },
    "include": [
        "src/**/*"
    ]
}